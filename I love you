    const calendarEl = document.getElementById("calendar");
    const modal = document.getElementById("modal");
    const modalTitle = document.getElementById("modalTitle");
    const modalImage = document.getElementById("modalImage");
    const modalText = document.getElementById("modalText");
    const closeModalBtn = document.getElementById("closeModal");

    function isDayLocked(dayNumber) {
      if (!lockByDate) return false;
      const today = new Date();
      const target = new Date(calendarYear, 11, dayNumber); // month 11 = December
      return today < target;
    }

    function openDay(dayNumber) {
      if (isDayLocked(dayNumber)) return;
      const data = daysData[dayNumber];
      if (!data) return;

      modalTitle.textContent = `Day ${dayNumber} â€“ December`;
      modalText.textContent = data.text || "";

      if (data.image && data.image.trim() !== "") {
        modalImage.src = data.image;
        modalImage.style.display = "block";
      } else {
        modalImage.style.display = "none";
      }

      modal.classList.add("active");
    }

    function buildCalendar() {
      for (let day = 2; day <= 23; day++) {
        const div = document.createElement("div");
        div.className = "day";
        if (isDayLocked(day)) div.classList.add("locked");
        div.innerHTML = `<span>${day}</span>`;
        div.addEventListener("click", () => openDay(day));
        calendarEl.appendChild(div);
      }
    }

    buildCalendar();

    closeModalBtn.addEventListener("click", () => {
      modal.classList.remove("active");
    });

    modal.addEventListener("click", (e) => {
      if (e.target === modal) modal.classList.remove("active");
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") modal.classList.remove("active");
    });
  </script>
